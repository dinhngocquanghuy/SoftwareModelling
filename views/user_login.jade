extends layout

block content
  script(src='/javascripts/user.js')
  #content
    div
      span.background
      .section
        h3
          span Sign In
        div
          p Please enter username and password to login.
          form
            table
              tbody
                tr
                  td Username*
                  td
                    input#txtusername(type='text', required='')
                tr
                  td Password*
                  td
                    input#txtpassword(type='password', required='')
                tr
                  td  Role
                  td
                    select#role
                      option(value='buyer') Buyer
                      option(value='seller') Seller
            input#policy(type='checkbox')
            |             I agree to the Terms of Use and Privacy Policy
            p
          p#error(style='color:Red;')
          p
              button(onclick='login()') Submit
          p * = Required Field
